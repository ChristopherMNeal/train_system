<h3>Edit <%= @city.station_name %></h3>

<form method="post" action="/cities/<%= @city.id %>">
<input name="_method" type="hidden" value="patch">
<label for="city_name">Name</label>
<input class="form-control" name="city_name" value="<%= @city.name %>">
<label for="station_name">Station Name</label>
<input class="form-control" name="station_name" value="<%= @city.station_name %>">
<button class="btn">Update</button>
</form>

<form method="post" action="/cities/<%= @city.id %>">
<input name="_method" type="hidden" value="delete">
<button class="btn">Delete</button>
</form>